*
  text-decoration none
  margin 0
  list-style none
html, body
  margin 0
  font 13px 'Helvetica Neue', Helvetica, Arial
  color #333

header
  height 75px
  background-image linear-gradient(bottom, #1b3761 7%, #265396 54%, #4372bd 95%)
  background-image -o-linear-gradient(bottom, #1b3761 7%, #265396 54%, #4372bd 95%)
  background-image -moz-linear-gradient(bottom, #1b3761 7%, #265396 54%, #4372bd 95%)
  background-image -webkit-linear-gradient(bottom, #1b3761 7%, #265396 54%, #4372bd 95%)
  background-image -ms-linear-gradient(bottom, #1b3761 7%, #265396 54%, #4372bd 95%)

  background-image -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(0.07, #1b3761),
    color-stop(0.54, #265396),
    color-stop(0.95, #4372bd)
  )
  border-bottom 1px solid #DDD
  box-shadow 0 4px 4px rgba(0, 0, 0, 0.05s)
  nav
    a
      height 75px
      padding 0 40px
      display inline-block
      line-height 75px
      text-align center
      &.active
        background #1b3761
        box-shadow inset 0px 0px 10px -2px rgba(0, 0, 0, 0.8)

#main
  margin-top 5px

#messages
  width 100%
  border-collapse collapse
  .message
    padding 10px
    background #f5f5f5
    overflow hidden
    border-bottom 1px solid #DDD
    &:nth-child(odd)
      background #fff
  td
    padding 10px
  .message-timestamp
    text-align center
  .message-user
    span  
      display block
      &.username
        font-size 11px
        color #CCC

.tag
  display inline-block
  padding 2px
  background rgba(255, 0, 0, 0.1)
  border 1px solid rgba(255, 0, 0, 0.2)
  -webkit-border-radius 3px
  -moz-border-radius 3px
  border-radius 3px
  margin 0 5px
.view
  overflow hidden

#stats
  .title
    font-weight normal
    text-align center
  .chart
    width 50%
    margin-top 20px
    float left
    &.chart-full
      width 100%